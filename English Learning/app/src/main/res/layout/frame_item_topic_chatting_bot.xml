<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="5dp"
    >

    <ImageView
        android:id="@+id/img_topic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_learn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#f0ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_topic"
        app:layout_constraintStart_toStartOf="@+id/img_topic"
        app:layout_constraintTop_toBottomOf="@+id/img_topic" />
</android.support.constraint.ConstraintLayout>